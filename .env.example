# ============================================
# CHUTEA Platform - Environment Variables
# 腾讯云轻量应用服务器部署配置
# ============================================
# 
# Instructions:
# 1. Copy this file to .env
# 2. Replace all YOUR_*_HERE placeholders with real values
# 3. Never commit .env to Git
#

# ============================================
# Core Settings (必填)
# ============================================

# Server port
PORT=5000

# Node environment
NODE_ENV=production

# JWT secret for authentication (generate with: openssl rand -hex 32)
JWT_SECRET=YOUR_JWT_SECRET_HERE

# ============================================
# Database (必填)
# ============================================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://YOUR_USER:YOUR_PASSWORD@localhost:5432/chutea

# ============================================
# Tencent Cloud SMS (腾讯云短信 - 必填)
# ============================================

# Tencent Cloud API credentials
TENCENT_SECRET_ID=YOUR_TENCENT_SECRET_ID_HERE
TENCENT_SECRET_KEY=YOUR_TENCENT_SECRET_KEY_HERE

# SMS-specific credentials (can be same as above or separate sub-account)
TENCENT_SMS_SECRET_ID=YOUR_TENCENT_SMS_SECRET_ID_HERE
TENCENT_SMS_SECRET_KEY=YOUR_TENCENT_SMS_SECRET_KEY_HERE

# SMS application settings
TENCENT_SMS_APP_ID=YOUR_SMS_APP_ID_HERE
TENCENT_SMS_REGION=ap-guangzhou
TENCENT_SMS_SIGN_NAME=YOUR_SMS_SIGN_NAME_HERE
TENCENT_SMS_TEMPLATE_ID_VERIFICATION=YOUR_VERIFICATION_TEMPLATE_ID_HERE
TENCENT_SMS_TEMPLATE_ID_NOTIFICATION=YOUR_NOTIFICATION_TEMPLATE_ID_HERE

# ============================================
# Tencent Cloud Captcha (腾讯云验证码 - 必填)
# ============================================

TENCENT_CAPTCHA_APP_ID=YOUR_CAPTCHA_APP_ID_HERE
TENCENT_CAPTCHA_APP_SECRET=YOUR_CAPTCHA_APP_SECRET_HERE

# ============================================
# Telegram Bot (Telegram 通知 - 必填)
# ============================================

# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# Chat IDs for different notification channels
TELEGRAM_CHAT_FINANCE=YOUR_FINANCE_CHAT_ID_HERE
TELEGRAM_CHAT_KITCHEN=YOUR_KITCHEN_CHAT_ID_HERE
TELEGRAM_CHAT_REGISTRATION=YOUR_REGISTRATION_CHAT_ID_HERE

# ============================================
# IIKO POS Integration (可选 - 生产环境必填)
# ============================================

# Set to 'mock' for development, 'real' for production
IIKO_PROVIDER=mock

# ============================================
# AI Translation (可选)
# ============================================

# DeepSeek API for AI-powered translation
DEEPSEEK_API_KEY=YOUR_DEEPSEEK_API_KEY_HERE
DEEPSEEK_API_URL=https://api.deepseek.com

# ============================================
# Backup SMS Providers (可选)
# ============================================

# SMS.ru (Russian SMS provider)
SMS_RU_API_KEY=YOUR_SMSRU_API_KEY_HERE
SMS_RU_TEST_MODE=false

# Twilio (International SMS)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_SID_HERE
TWILIO_AUTH_TOKEN=YOUR_TWILIO_TOKEN_HERE
TWILIO_PHONE_NUMBER=YOUR_TWILIO_PHONE_HERE

# MTS (Russian carrier)
MTS_API_KEY=YOUR_MTS_API_KEY_HERE
MTS_API_SECRET=YOUR_MTS_API_SECRET_HERE

# ============================================
# OAuth & External Services (可选)
# ============================================

OAUTH_SERVER_URL=YOUR_OAUTH_SERVER_URL_HERE
OWNER_OPEN_ID=YOUR_OWNER_OPEN_ID_HERE

# Built-in Forge API (internal)
BUILT_IN_FORGE_API_KEY=YOUR_FORGE_API_KEY_HERE
BUILT_IN_FORGE_API_URL=YOUR_FORGE_API_URL_HERE

# ============================================
# Client-side Variables (Vite)
# ============================================

VITE_APP_ID=chutea
VITE_WS_URL=wss://your-domain.com
VITE_OAUTH_PORTAL_URL=YOUR_OAUTH_PORTAL_URL_HERE
VITE_FRONTEND_FORGE_API_KEY=YOUR_FRONTEND_FORGE_KEY_HERE
VITE_FRONTEND_FORGE_API_URL=YOUR_FRONTEND_FORGE_URL_HERE
